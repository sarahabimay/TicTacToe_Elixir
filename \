defmodule TTT.BeatablePlayer do
  alias TTT.Board
  @init_alpha -10000000

  def next_move(mark, board, _) do
    move = minimax(length(Board.available_positions(board)), board, ai_mark, @INITIAL_ALPHA_VALUE, @INITIAL_BETA_VALUE)
  end

  def minimax(depth, board, ai_mark, alpha, beta) do
    8
  end
end
